---
const events = [
  {
    icon: 'fas fa-calendar-week',
    title: 'Weekly Meetings',
    time: 'Every Thursday at 7:00 PM EAT',
    description: 'Join our virtual discussions on Elixir, Erlang, OTP, Phoenix and the broader BEAM ecosystem.',
    link: '#'
  },
  {
    icon: 'fas fa-video',
    title: 'Monthly Webinars',
    time: 'First Saturday of each month',
    description: 'Expert-led sessions diving deep into specific BEAM topics with Q&A opportunities.',
    link: '#'
  },
  {
    icon: 'fas fa-calendar-alt',
    title: 'Annual Conference',
    time: 'October 15-17, 2024',
    description: 'Our flagship event featuring international speakers, workshops, and networking opportunities.',
    link: '#'
  }
];
---

<section id="events" class="py-20 elixir-pattern">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold mb-4">
        Our <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-secondary">Events</span>
      </h2>
      <div class="h-1 w-24 bg-gradient-to-r from-accent to-elixir mx-auto mb-6"></div>
      <p class="max-w-2xl mx-auto text-gray-700">
        Join our regular events designed to educate, connect, and inspire the BEAM community in Africa.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {events.map((event, index) => (
        <div class="bg-white rounded-xl p-6 shadow-md event-card card-hover">
          <div class="flex items-center mb-4">
            <div class={`w-10 h-10 ${index === 0 ? 'bg-primary' : index === 1 ? 'bg-secondary' : 'bg-accent'} rounded-full flex items-center justify-center text-white`}>
              <i class={event.icon}></i>
            </div>
            <h3 class="text-xl font-bold ml-3">{event.title}</h3>
          </div>
          <p class="mb-4">{event.time}</p>
          <p class="text-gray-700 mb-4">{event.description}</p>
          <a href={event.link} class="text-primary font-medium hover:underline">
            {event.title === 'Weekly Meetings' ? 'Join next meeting →' : 
             event.title === 'Monthly Webinars' ? 'View upcoming webinars →' : 
             'Learn more →'}
          </a>
        </div>
      ))}
    </div>
    
    <div class="mt-16 bg-white rounded-xl p-8 max-w-4xl mx-auto shadow-lg">
      <div class="flex flex-col md:flex-row items-center">
        <div class="md:w-2/3 mb-6 md:mb-0">
          <h3 class="text-2xl font-bold mb-3 text-primary">Community Event Calendar</h3>
          <p>Never miss an event! Subscribe to our calendar to stay updated on all upcoming meetings, webinars, and conferences.</p>
        </div>
        <div class="md:w-1/3 text-center">
          <a 
            href="#" 
            class="inline-block bg-gradient-to-r from-accent to-elixir hover:from-accent/90 hover:to-elixir/90 text-white font-bold py-3 px-6 rounded-lg transition duration-300"
          >
            Subscribe
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
