---
const jobListings = [
  {
    title: "Senior Elixir Developer",
    company: "Nairobi Tech Solutions",
    type: "Full-time",
    tags: ["Phoenix", "OTP", "PostgreSQL"],
    description: "We are looking for an experienced Elixir developer to lead our backend team building financial solutions...",
    postedDays: 3
  },
  {
    title: 'BEAM Engineer (Remote)',
    company: 'Pan-African Fintech',
    type: 'Remote',
    tags: ['Erlang', 'Distributed Systems', 'Kubernetes'],
    description: 'Help us build scalable financial infrastructure serving 5 African countries using Erlang/OTP...',
    postedDays: 7
  }
];

const pricingOptions = [
  {
    name: 'Standard Listing',
    price: 'KES 5,000'
  },
  {
    name: 'Featured Listing (30 days)',
    price: 'KES 8,000'
  },
  {
    name: 'Startup Discount',
    price: 'KES 3,500'
  }
];

const benefits = [
  'Targeted reach to BEAM/Elixir developers',
  'Featured placement in our newsletter',
  'Social media promotion',
  'Community discount for startups'
];
---

<section id="jobs" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold mb-4">
        Job <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-secondary">Opportunities</span>
      </h2>
      <div class="h-1 w-24 bg-gradient-to-r from-primary to-secondary mx-auto mb-6"></div>
      <p class="max-w-2xl mx-auto text-gray-700">
        Find your next BEAM/Elixir role or advertise with us to reach Africa's top talent.
      </p>
    </div>
    
    <div class="max-w-4xl mx-auto">
      <div class="bg-gradient-to-r from-primary to-secondary rounded-xl p-8 mb-10 text-white">
        <h3 class="text-2xl font-bold mb-4">Post a Job with Us</h3>
        <p class="mb-6">
          Reach Africa's growing community of BEAM and Elixir developers by advertising your opportunities with us.
        </p>
        
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <h4 class="font-bold mb-2">Benefits:</h4>
            <ul class="list-disc pl-5 space-y-2">
              {benefits.map(benefit => (
                <li>{benefit}</li>
              ))}
            </ul>
          </div>
          
          <div>
            <h4 class="font-bold mb-2">Pricing:</h4>
            <ul class="space-y-3">
              {pricingOptions.map(option => (
                <li class="flex justify-between">
                  <span>{option.name}</span>
                  <span class="font-bold">{option.price}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
        
        <div class="mt-6">
          <a 
            href="#contact" 
            class="inline-block bg-white text-primary hover:bg-gray-100 font-bold py-3 px-6 rounded-lg transition duration-300"
          >
            Post a Job
          </a>
        </div>
      </div>
      
      <h3 class="text-2xl font-bold mb-6 text-center text-primary">Current Opportunities</h3>
      
      <div class="space-y-6">
        {jobListings.map(job => (
          <div class="border border-gray-200 rounded-lg p-6 hover:shadow-md transition duration-300">
            <div class="flex justify-between items-start">
              <div>
                <h4 class="text-xl font-bold text-primary">{job.title}</h4>
                <p class="text-gray-700">{job.company}</p>
              </div>
              <span class={`text-sm font-medium px-3 py-1 rounded-full ${
                job.type === 'Full-time' ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800'
              }`}>
                {job.type}
              </span>
            </div>
            <div class="mt-4 flex flex-wrap gap-2">
              {job.tags.map(tag => (
                <span class="bg-gray-100 text-gray-800 text-sm px-3 py-1 rounded">{tag}</span>
              ))}
            </div>
            <p class="mt-4">{job.description}</p>
            <div class="mt-4 flex justify-between items-center">
              <span>Posted {job.postedDays} {job.postedDays === 1 ? 'day' : 'days'} ago</span>
              <a href="#" class="text-primary font-medium hover:underline">Apply Now â†’</a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
