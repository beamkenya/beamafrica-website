---
import '@fortawesome/fontawesome-free/css/all.min.css';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "BeamAfrica - BEAM & Elixir Community in Africa",
  description = "Connecting developers, companies, and enthusiasts to foster growth in the BEAM ecosystem across  ."
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@400;500;700&family=Open+Sans:wght@300;400;600&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-light text-dark">
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
